@model Smartmei.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}
<style>

    body {
        background-color: #E7F9F9;
        margin: 0;
        padding: 0;
    }

   
    .titulo {
        text-align: center;
        padding: 10px;
    }

    .espacamento {
        padding-bottom: 20px;
    }


    .bg {
        background-color: white;
        padding: 15px;
        border-color: white;
        border-radius: 10px;
    }

</style>

<div class="titulo">
    <div class="espacamento">
        <h1>Excluir cliente</h1>
    </div>
</div>
<hr />

<div class="bg">
    <h3>Você confirma a exclusão do cadastro do cliente <strong>@Html.DisplayFor(model => model.Nome)</strong>?</h3>
    <br />

    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sim" class="btn btn-danger" />
            <a class="btn btn-dark" asp-action="Index">Não</a>
        </form>
    </div>
</div>


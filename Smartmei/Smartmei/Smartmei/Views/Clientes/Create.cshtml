@model Smartmei.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<style>
    main {
        padding-top: 20px;
    }

    h5 {
        text-align: center;
        color: #09547F;
    }

    .container {
        width: 100%; /* Defina a largura do contêiner */
    }

    .col {
        margin-left: auto; /* Margem automática à esquerda */
        margin-right: auto; /* Margem automática à direita */
    }

    .col {
        padding-top: 10px;
        align-items: center;
        width: 70%;
    }

    body {
        background-color: #E7F9F9;
    }

    .botoes {
        padding: 20px 0;
    }

    .form-control {
        border: 2px solid #09547F;
    }

    .form-group {
        padding: 5px 0;
        width: 100%;
    }

    .control-label {
        font-weight: bold;
        text-align: left;
        color: #09547F;
    }

    .espacamento {
        padding: 10px 0;
    }

    body {
        background-image: url('/bg.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
</style>
<h5>Adicionar novo cliente:</h5>
        
<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col">
                <div class="row">
                    <div class="col">
                        <label asp-for="Nome" class="control-label"></label>
                        <input value="@Model.Nome" id="Nome" name="Nome" required class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="CNPJ" class="control-label"></label>
                        <input value="@Model.CNPJ" id="CNPJ" name="CNPJ" required class="form-control" />
                        <span asp-validation-for="CNPJ" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input value="@Model.Telefone" id="Telefone" name="Telefone" required class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Email" class="control-label"></label>
                        <input value="@Model.Email" id="Email" name="Email" required class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input value="@Model.Cidade" id="Cidade" name="Cidade" required class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Estado" class="control-label"></label>
                        <select value="@Model.Estado" id="Estado" name="Estado" class="form-select form-control" asp-items="Html.GetEnumSelectList<Estado>()"><option value="">Selecione</option></select>
                         <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="ProductOwner" class="control-label"></label>
                        <input value="@Model.ProductOwner" id="ProductOwner" name="ProductOwner" required class="form-control" />
                        <span asp-validation-for="ProductOwner" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Observacao" class="control-label"></label>
                        <input value="@Model.Observacao" id="Observacao" name="Observacao" required class="form-control" />
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col text-center">
                    <input type="submit" id="botoes" value="Salvar" class="btn btn-primary" />
                    <a class="btn btn-dark" id="botoes" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>
            
   


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#CNPJ').mask('00.000.000/0000-00');
            });
        </script>
}

@model SmartMei.Models.Faturamento

@{
    ViewData["Title"] = "Edit";
}

<style>

    .botoes {
        padding: 0 10px 10px 0;
        margin-bottom: 30px;
        margin-right: 120px;
    }

    .btn-color {
        background-color: #09547F;
        color: #fff;
        border-color: #09547F;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 5px;
    }

        .btn-color:hover {
            background-color: #0C71AB;
            color: #fff;
            border-color: #E7F9F9;
            text-decoration: none;
        }

    .btn-color-voltar {
        background-color: black;
        color: #fff;
        border-color: black;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 5px;
    }

        .btn-color-voltar:hover {
            background-color: #292929;
            border-color: #E7F9F9;
            color: #fff;
            text-decoration: none;
        }


    .control-label {
        font-weight: bold;
        width: 100%;
    }

    .form-select {
        width: 100%;
        border: 2px solid #09547F;
    }

    .col {
        align-items: center;
        width: 100%;
        padding: 0 70px 0 70px;
        padding-bottom: 25px;
    }

    .form-control {
        border: 2px solid #09547F;
    }

    main {
        padding-top: 10px;
    }

    .espacamento {
        padding: 10px 0 30px 0;
        text-align: center;
    }

    body {
        background-image: url('/bg.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    h5 {
        text-align: center;
    }

</style>

<div class="espacamento">
    <h5>Edite seu faturamento:</h5>
</div>

<div class="container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                             <label asp-for="Mes" class="control-label"></label>
                            <input asp-for="Mes" class="form-control" />
                            <span asp-validation-for="Mes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                           <label asp-for="Ano" class="control-label"></label>
                            <input asp-for="Ano" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ValorBruto" class="control-label"></label>
                            <input value="@Model.ValorBruto" id="ValorBruto" name="ValorBruto" required class="form-control" />
                            <span asp-validation-for="ValorBruto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                           <label asp-for="CustoMensal" class="control-label"></label>
                            <input value="@Model.CustoMensal" id="CustoMensal" name="CustoMensal" required class="form-control" />
                            <span asp-validation-for="CustoMensal" class="text-danger"></span>>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ValorLiquidoMensal" class="control-label"></label>
                            <input value="@Model.ValorLiquidoMensal" id="ValorLiquidoMensal" name="ValorLiquidoMensal" required class="form-control" />
                            <span asp-validation-for="ValorLiquidoMensal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                           <label asp-for="MeiId" class="control-label"></label>
                            <select asp-for="MeiId" class="form-control" asp-items="ViewBag.MeiId"></select>
                            <span asp-validation-for="MeiId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="botoes d-flex justify-content-end">
                    <input class="btn btn-color" type="submit" value="Salvar" />
                    <a class="btn btn-color-voltar" asp-action="Index">Voltar</a>
                </div>
            </div>
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
